{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "types": ["jest", "node"],
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
      "src/**/*",
      "__tests__"
  ],
  "exclude": [
    "node_modules"
  ]
}